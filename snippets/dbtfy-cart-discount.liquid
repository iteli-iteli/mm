                {%- if settings.dbtfy_cart_discount -%}
                <div class="dbtfy dbtfy-cart_discount">
                  <div class="CartDiscount">
                    {% unless settings.dbtfy_cart_discount_label == blank %}
                    <label for="discount">{{ settings.dbtfy_cart_discount_label }}</label>
                    {% endunless %}
                    <div class="input-group">
                      <input class="input-cart_discount input--small input-group-field" autocomplete="off" type="text" name="discount" placeholder="{{ settings.dbtfy_cart_discount_placeholder }}"/>
